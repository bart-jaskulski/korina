<div class="[ w-full lg:w-1/2 ] [ lg:ml-auto ] l-cart-totals-table cart_totals {{ calculated_shipping ? 'calculated_shipping' }}">

	{% do action( 'woocommerce_before_cart_totals' ) %}

	<table cellspacing="0" class="shop_table shop_table_responsive">
		<tr class="cart-subtotal">
			<th>Subtotal</th>
			<td data-title="Subtotal">{{ fn('wc_cart_totals_subtotal_html') }}</td>
		</tr>

		{% for code, coupon in coupons %}
			<tr class="cart-discount">
				<th>{{ fn('wc_cart_totals_coupon_label', coupon) }}</th>
				<td data-title="{{ fn('wc_cart_totals_coupon_label', coupon, false) }}">{{ fn('wc_cart_totals_coupon_html', coupon) }}</td>
			</tr>
		{% endfor %}

		{% if needs_shipping and show_shipping %}

			{% do action( 'woocommerce_cart_totals_before_shipping' )%}

			{{ fn('wc_cart_totals_shipping_html') }}

			{% do action('woocommerce_cart_totals_after_shipping') %}

		{% elseif needs_shipping and fn('get_option', 'woocommerce_enable_shipping_calc') == 'yes' %}

			<tr class="shipping">
				<th>Shipping</th>
				<td data-title="Shipping">{{ fn('woocommerce_shipping_calculator') }}</td>
			</tr>

		{% endif %}

		{% for fee in fees %}
			<tr class="fee">
				<th>{{ fee.name }}</th>
				<td data-title="{{ fee.name }}">{{ fn('wc_cart_totals_fee_html', fee) }}</td>
			</tr>
		{% endfor %}

		{% if display_tax %}
			{% if fn('get_option', 'woocommerce_tax_total_display') == 'itemized' %}
				{% for code, tax in tax_totals %}
					<tr class="tax-rate tax-rate-{{ code }}">
						<th>{{ tax.label }}{{ estimated_text }}</th>
						<td data-title="{{ tax.label }}">{{ tax.formatted_amount|e('wp_kses_post') }}</td>
					</tr>
				{% endfor %}
			{% else %}
				<tr class="tax-total">
					<th>{{ tax_or_vat }}{{ estimated_text }}</th>
					<td data-title="{{ tax_or_vat }}">{{ fn('wc_cart_totals_taxes_total_html') }}</td>
				</tr>
			{% endif %}
		{% endif %}

		{% do action( 'woocommerce_cart_totals_before_order_total' )%}

		<tr class="order-total">
			<th>Do zapłaty</th>
			<td data-title="Total">{{ fn('wc_cart_totals_order_total_html') }}</td>
		</tr>

		{% do action( 'woocommerce_cart_totals_after_order_total' )%}

	</table>

	<div class="wc-proceed-to-checkout">
		<a class="c-button checkout-button button alt wc-forward"
		   data-button-type="filled"
		   data-button-width="full"
		   href="{{ fn('wc_get_checkout_url')|e('esc_url') }}">
			Przejdź do kasy
		</a>
	</div>

	{% do action( 'woocommerce_after_cart_totals' )%}

</div>
